.bs-card-container {
  display: flex;
  color: #108ee9;
  width: 100%;
  box-shadow: 1px 1px 1px 1px rgba(89, 101, 101, 0.53);
  background-color: #fff;
}
.bs-card-left {
  height: 85px;
  width: 85px;
}
.bs-card-right {
  padding: 5px 10px 5px 10px;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  align-items: flex-start;
}
.bs-card-title {
  color: #000;
  font-size: 16px;
}
