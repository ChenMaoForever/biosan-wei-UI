.bs-avatar-container-middle {
  width: 100px;
  height: 100px;
  overflow: hidden;
  position: relative;
}
.bs-avatar-container-small {
  width: 80px;
  height: 80px;
  overflow: hidden;
  position: relative;
}
.bs-avatar-container-large {
  width: 120px;
  height: 120px;
  overflow: hidden;
  position: relative;
}
.bs-avatar-middle {
  width: 100px;
  height: 100px;
  float: left;
}
.bs-avatar-small {
  width: 80px;
  height: 80px;
  float: left;
}
.bs-avatar-large {
  width: 120px;
  height: 120px;
  float: left;
}
.bs-avatar-circle {
  border-radius: 50%;
}
.bs-avatar-count {
  color: #fff;
  min-width: 18px;
  height: 18px;
  border-radius: 50%;
  background-color: #f00;
  position: absolute;
  top: 0px;
  right: 0px;
  padding: 1px;
  display: flex;
  justify-content: center;
  align-items: center;
}
