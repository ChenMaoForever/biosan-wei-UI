/* button variables*/
/*  progress */
progress {
  border-radius: 10rpx;
}
.bs-progress-warp {
  height: 20rpx;
  background-color: #e2dfdf;
  opacity: 0.8;
  border-radius: 10rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
}
.bs-progress-warp::after {
  content: "";
  display: 'block';
  clear: both;
  height: 100%;
}
.bs-progress-main {
  float: left;
  background-color: #1aad19;
  transition: width .2s;
  transition-timing-function: 'ease';
  width: 20%;
  height: 100%;
  border-radius: 10rpx;
}
.bs-progress-hasInfo_bg {
  background-color: #fff;
}
.bs-progress-container {
  position: relative;
}
.bs-progress-container .bs-progress-info {
  float: right;
  width: 10%;
  padding-left: 10rpx;
}
.bs-progress-container .bs-progress-hasInfo {
  height: 20rpx;
  background-color: #e2dfdf;
  opacity: 0.8;
  border-radius: 10rpx;
  display: flex;
  justify-content: space-between;
  align-items: center;
  width: 90%;
}
.bs-progress-mainBg {
  background-color: #1aad19;
}
